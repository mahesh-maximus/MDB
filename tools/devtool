# Naming things is hard
MY_NAME="MDS $(basename "$0")"

# Send a decorated message to stdout, followed by a new line
#
say() {
    [ -t 1 ] && [ -n "$TERM" ] \
        && echo "$(tput setaf 2)[$MY_NAME]$(tput sgr0) $*" \
        || echo "[$MY_NAME] $*"
}

main() {
    say "Starting devtool ..."
}

main "$@"
